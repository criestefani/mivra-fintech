{
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-supabase"
      ],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_KEY}"
      },
      "description": "Supabase MCP - Database operations and queries"
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub MCP - Repository management, issues, PRs"
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git"
      ],
      "description": "Git MCP - Local git operations"
    },
    "magic": {
      "command": "npx",
      "args": [
        "-y",
        "@21st-dev/magic"
      ],
      "env": {
        "MAGIC_API_KEY": "${MAGIC_MCP}"
      },
      "description": "Magic MCP (21st.dev) - AI-powered tools"
    },
    "sentry": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sentry"
      ],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_API}"
      },
      "description": "Sentry MCP - Error tracking and monitoring"
    },
    "notion": {
      "command": "npx",
      "args": [
        "-y",
        "@notionhq/client-mcp"
      ],
      "env": {
        "NOTION_API_KEY": "${NOTION_API}"
      },
      "description": "Notion MCP - Notion workspace integration"
    },
    "shadcn-ui": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-shadcn"
      ],
      "description": "ShadCN UI MCP - UI component library"
    },
    "web-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "description": "Web Search MCP - Search the web"
    },
    "deep-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/deep-thinking-mcp"
      ],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API}"
      },
      "description": "Deep Thinking MCP - Advanced reasoning and analysis"
    }
  },
  "environmentFile": "apps/backend/.env"
}
