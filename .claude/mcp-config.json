{
  "mcpServers": {
    "supabase": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-supabase"
      ],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_KEY}"
      },
      "description": "Supabase MCP - Database operations and queries"
    },
    "github": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub MCP - Repository management, issues, PRs"
    },
    "git": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-git"
      ],
      "description": "Git MCP - Local git operations"
    },
    "magic": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@21st-dev/magic"
      ],
      "env": {
        "MAGIC_API_KEY": "${MAGIC_MCP}"
      },
      "description": "Magic MCP (21st.dev) - AI-powered tools"
    },
    "notion": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-notion"
      ],
      "env": {
        "NOTION_API_KEY": "${NOTION_API}"
      },
      "description": "Notion MCP - Notion workspace integration"
    },
    "web-search": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-web-search"
      ],
      "description": "Web Search MCP - Search the web"
    },
    "shadcn": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "shadcn@latest",
        "mcp"
      ],
      "description": "ShadCN UI MCP - Install and manage ShadCN components"
    },
    "sequential-thinking": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API}"
      },
      "description": "Sequential Thinking MCP - Advanced reasoning and analysis"
    }
  },
  "environmentFile": "apps/backend/.env"
}
